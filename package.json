{
    "name": "node-auth",
    "version": "1.0.0",
    "description": "Simple User Management API",
    "main": "src/app.js",
    "repository": "git@github.com:servettonga/node-auth.git",
    "author": "Servet <serveth@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "",
        "dev": "ENV_FILE=./config/.env.dev yarn nodemon",
        "test:unit": "ENV_FILE=./config/.env.test node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "type": "module",
    "dependencies": {
        "connect": "^3.7.0",
        "dotenv-extended": "^2.9.0",
        "dotenv-parse-variables": "^2.0.0",
        "express": "^4.18.2",
        "express-openapi-validator": "^5.0.6",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.9",
        "openapi-backend": "^5.9.2",
        "swagger-routes-express": "^3.3.2",
        "validator": "^13.11.0",
        "winston": "^3.10.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "jest": "^29.6.4",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3"
    },
    "nodemonConfig": {
        "ignore": [
            "**/test/**",
            "**/docs/**"
        ]
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "imports": {
        "#utils/*": [
            "./src/utils/*"
        ],
        "#config": [
            "./src/config/index.js"
        ],
        "#controllers/*": [
            "./src/api/controllers/*"
        ],
        "#services/*": [
            "./src/api/services/*"
        ]
    }
}
